<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OktaLogin.MainPage">

    <StackLayout VerticalOptions="Center">
        <Label Text="Welcome to Xamarin.Forms" x:Name="StatusLabel" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
        <Label Text="---" x:Name="AccessTokenLabel" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
        <Label Text="---" x:Name="RefreshTokenLabel" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
        <Label Text="---" x:Name="ExpiresLabel" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
        <Button x:Name="LoginButton" Text="Log in" HorizontalOptions="Center" Clicked="LoginButtonClicked"/>
        <Button x:Name="RefreshTokenButton" Text="Refresh token" HorizontalOptions="Center" Clicked="RefreshTokenButtonClicked"/>
        <Button x:Name="CallApiButton" Text="Call Client API" HorizontalOptions="Center" Clicked="CallApiButtonClicked"/>
        <Button x:Name="LogoutButton" Text="Log out"  IsVisible="False" HorizontalOptions="Center" Clicked="LogoutButtonClicked"/>
    </StackLayout>

</ContentPage>
